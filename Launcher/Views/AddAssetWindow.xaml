<Window x:Class="Launcher.Views.AddAssetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Asset"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Create New Asset"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="{DynamicResource ForegroundBrush}"/>

        <!-- Asset Name Input -->
        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <TextBlock Text="Asset Name:" Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,4"/>
            <TextBox x:Name="TxtAssetName"
                     Width="250"
                     Foreground="{DynamicResource ForegroundBrush}"
                     Background="{DynamicResource WindowBackgroundBrush}"
                     BorderBrush="{DynamicResource ForegroundBrush}"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="BtnClick_OK"/>
            <Button Content="Cancel" Width="80" Click="BtnClick_Cancel"/>
        </StackPanel>
    </Grid>
</Window>
