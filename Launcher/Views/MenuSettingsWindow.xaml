<Window x:Class="Launcher.Views.MenuSettingsWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Launcher.Views"
      mc:Ignorable="d" 
      Height="170" Width="350"     
      WindowStartupLocation="CenterOwner"
      ResizeMode="NoResize"
      Title="Settings"
      Background="{DynamicResource WindowBackgroundBrush}" Foreground="{DynamicResource ForegroundBrush}">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Text="Settings"
                   FontSize="16"
                   FontWeight="Bold"/>

        <!-- Content -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,16.5,0,0">
                <CheckBox Grid.Column="0" x:Name="ChkBox_EnableDarkMode" Content="Enable Dark Mode" Click="ChkBox_EnableDarkMode_Click" Background="{DynamicResource WindowBackgroundBrush}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Grid.Column="1" Text="Update interval for program status"/>
            <Slider x:Name="SldStatusUpdateInterval"
                    Minimum="2"
                    Maximum="60"
                    TickFrequency="2"
                    IsSnapToTickEnabled="True"
                    ValueChanged="SldChanged_StatusUpdateInterval">
                <Slider.Resources>
                    <Style TargetType="Thumb">
                        <Setter Property="Height" Value="15"/>
                        <Setter Property="Width" Value="6"/>
                    </Style>
                </Slider.Resources>
            </Slider>
            <TextBlock x:Name="TxtStatusUpdateIntervalValue"
                       Margin="0,4,0,0"
                       HorizontalAlignment="Center"
                       Text="test"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="OK" Width="80" Click="BtnClick_OK"/>
            <Button Content="Cancel" Width="80" Margin="6,0,0,0" Click="BtnClick_Cancel"/>
        </StackPanel>
    </Grid>
</Window>
