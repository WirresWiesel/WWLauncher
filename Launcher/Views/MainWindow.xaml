<Window x:Class="Launcher.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Launcher" Height="450" Width="800">

    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Assets -->
            <ColumnDefinition Width="150"/>
            <!-- Program Management Buttons -->
            <ColumnDefinition Width="150"/>
            <!-- Program Control Buttons -->
            <ColumnDefinition Width="*"/>
            <!-- Program List -->
        </Grid.ColumnDefinitions>

        <!-- Assets -->
        <StackPanel Grid.Column="0" Margin="0,0,6,0" VerticalAlignment="Top">
            <Label Content="Assets"
                   HorizontalContentAlignment="Left"
                   VerticalContentAlignment="Bottom"/>
            <ComboBox x:Name="ComboAssets"
                      Width="180"
                      DisplayMemberPath="Name"
                      SelectionChanged="ComboAssets_SelectionChanged"
                      HorizontalAlignment="Left"
                      IsEditable="True"
                      Text="Choose Asset ..."
                      Margin="0,0,0,6"/>
            <CheckBox x:Name="ChkBoxStartMaingame"
                    Content="start with Main Game"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Ellipse x:Name="EllipseMainGameSet"
                         Width="16"
                         Height="16"
                         Stroke="Black"
                         StrokeThickness="1"
                         Fill="Red"
                         Margin="0,6,0,6"
                         HorizontalAlignment="Left"/>
                <TextBlock x:Name="TxtBlock_StateMaingamePath" 
                           Text="Main Game is not set"
                           VerticalAlignment="Center"
                           Margin="6"/>
            </StackPanel>
            <Button x:Name="BtnStartProgramAll"
                    Content="Start Asset"
                    Click="BtnClick_StartProgramAll"
                    Margin="0,0,0,6"/>
            <Button x:Name="BtnStopProgramAll"
                    Content="Stop Asset"
                    Click="BtnClick_StopProgramAll"
                    Margin="0,0,0,6"/>
        </StackPanel>

        <!-- Program Management Buttons -->
        <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="3,0,3,0">
            <Label Content="Edit Assets"
                   HorizontalContentAlignment="Left"
                   VerticalContentAlignment="Bottom"/>
            <Button x:Name="BtnCreateAsset"
                    Content="Create new Asset"
                    Click="BtnClick_CreateNewAsset"
                    Margin="0,0,0,6"/>
            <Button x:Name="BtnAddMaingame"
                    Content="Choose Main Game"
                    Click="BtnClick_AddMaingame"
                    Margin="0,0,0,6"/>
            <Button x:Name="BtnAddProgram"
                    Content="Add Program"
                    Click="BtnClick_AddProgram"
                    Margin="0,0,0,6"/>
        </StackPanel>

        <!-- Program Control Buttons -->
        <StackPanel Grid.Column="2" VerticalAlignment="Top" Margin="3,0,3,0">
            <Label Content="Edit Programs"
                   HorizontalContentAlignment="Left"
                   VerticalContentAlignment="Bottom"/>
            <Button x:Name="BtnStartProgramSingle"
                    Content="Start Program"
                    Click="BtnClick_StartProgramSingle"
                    Margin="0,0,0,6"
                    IsEnabled="False"/>
            <Button x:Name="BtnStopProgramSingle"
                    Content="Stop Program"
                    Margin="0,0,0,6"
                    Click="BtnClick_StopProgramSingle"
                    IsEnabled="False"/>
            <Button x:Name="BtnDeleteProgram"
                    Content="Delete Program"
                    Margin="0,0,0,6"
                    Click="BtnClick_RemoveProgram"
                    IsEnabled="False"/>
        </StackPanel>

        <!-- Program List -->
        <ListView Grid.Column="3" x:Name="LstProgram"
                  HorizontalContentAlignment="Left"
                  VerticalContentAlignment="Center"
                  SelectionChanged="LstSelectionChanged_LstProgram">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Program" DisplayMemberBinding="{Binding Name}" Width="Auto"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding State}" Width="Auto"/>
                    <GridViewColumn Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Ellipse Width="16"
                                         Height="16"
                                         Stroke="Black"
                                         StrokeThickness="1"
                                         Margin="6,4">

                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="Gray"/>

                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding State}" Value="Running">
                                                    <Setter Property="Fill" Value="LimeGreen"/>
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding State}" Value="Unknown">
                                                    <Setter Property="Fill" Value="DarkGray"/>
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding State}" Value="Not Running">
                                                    <Setter Property="Fill" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="White"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding State}" Value="Running">
                            <Setter Property="Background" Value="LightGreen"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding State}" Value="Not Running">
                            <Setter Property="Background" Value="LightCoral"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>

        </ListView>
        
    </Grid>
</Window>
